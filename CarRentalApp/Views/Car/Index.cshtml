@model IEnumerable<CarRentalApp.Models.Car>

@{
    ViewData["Title"] = "Index";
}
<div style="padding-top:80px"></div>
<div class="container">
    <div class="col-lg-10 col-lg-offset-2">
        <div class="row">
            <div class="col-sm-2">
                <a asp-action="Create" class="btn btn-success">إضافة سيارة</a>
            </div>
            <div class="col-lg-2"></div>
            <div class="col-lg-2"></div>
            <div class="col-lg-2"></div>
            <div class="col-xs-6 col-md-4">
                <div class="input-group">
                    <input type="text" class="form-control" placeholder="Search" id="myInput" onkeyup="myFunction()" />
                    <div class="input-group-btn">
                        <button class="btn btn-primary" type="submit">
                            <span class="bi bi-search"></span>
                        </button>
                    </div>
                </div>
            </div>
        </div>


        <table class="table table-hover" id="myTable">
            <thead>
        <tr>
           
            
            <th>
                @Html.DisplayNameFor(model => model.CarId)
            </th>
           
            <th>
                @Html.DisplayNameFor(model => model.ChassisNumber)
            </th>
            
           
            <th>
                @Html.DisplayNameFor(model => model.PlateNumber)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
           
            <td>
                @Html.DisplayFor(modelItem => item.CarId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Yearfmanufacture)
            </td>
            
            <td>
                @Html.DisplayFor(modelItem => item.PlateNumber)
            </td>
            <td>
                            <a asp-controller="Insurance" asp-action="Create" asp-route-id="@item.CarId"><i class="bi bi-folder2"></i></a> |
                            <a asp-action="Details" asp-route-id="@item.CarId"><i class="bi bi-eye"></i></a> |
                            <a asp-action="Delete" asp-route-id="@item.CarId"><i class="bi bi-archive"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
</div>

</div>
