@model CarRentalApp.Models.Company

@{
    ViewData["Title"] = "Create";
}

<div style="padding-top:80px"></div>

<div class="d-flex justify-content-center align-items-center" style="height: 100%;">
    <div class="card" style="width: 58rem;">


        <div class="card-body">
            <h5 class="card-title">إضافة شركة تأمين </h5>
            <div class="row">
                <div class="col-md-4">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="CompanyNameAr" class="control-label"></label>
                            <input asp-for="CompanyNameAr" class="form-control" />
                            <span asp-validation-for="CompanyNameAr" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="CompanyNameEn" class="control-label"></label>
                            <input asp-for="CompanyNameEn" class="form-control" />
                            <span asp-validation-for="CompanyNameEn" class="text-danger"></span>
                        </div>
                        <div style="padding-top:10px"></div>
                        <div class="form-group">
                            <input type="submit" value="إضافة" class="btn btn-primary" />
                            <a asp-action="Index" class="btn btn-warning">عودة إلى السابق</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
