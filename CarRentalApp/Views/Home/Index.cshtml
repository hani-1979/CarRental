@{
    ViewData["Title"] = "Home Page";
}

<style>
    img {
        border: 0px solid #ddd;
        border-radius: 4px;
        padding: 5px;
        width: 150px;
        text-align: center;
        display: flex;
        align-items: center;
    }

        img:hover {
            box-shadow: 0 0 2px 1px rgb(4, 1, 3);
        }
</style>
<style>
    .container {
        text-align: center; /* لتوسيط النص أفقيًا */
    }

    img {
        display: block;
        margin: 0 auto; /* لتوسيط الصورة */
    }
</style>

<div class="container-fluid " dir="rtl">
    <div style="padding-top: 100px;"></div>
    <div class="col-lg-10 col-lg-offset-5">
        
        
        <div class="justify-content-center align-items-center">
            <div class="row" img-container>
                <div class="col-lg-3">
                    <a asp-controller="Insurance" asp-action="Index">
                        <img src="~/Icons/Insurance.png" width="150" class="listing-img" height="150" alt="" /><h4 style="font-family: Reem Kufi; font-size: 18px; color: #000000">  وثائق التأمين</h4>
                    </a>
                </div>

                <div class="col-lg-3">
                    <a asp-controller="Car" asp-action="Index">
                        <img src="~/Icons/carregister.png" width="150" height="150" alt="" /><h4 style="font-family: Reem Kufi;  font-size: 18px; color: #000000;"> التسجيل</h4>
                    </a>
                </div>
                <div class="col-lg-3">
                     <a asp-controller="Account" asp-action="Index">
                    <img src="~/Icons/Users.png" runat="server" width="150" height="150" alt="" /><h4 style="font-family: Reem Kufi;  font-size:18px; color: #000000; "> المستخدمين </h4>
                    </a>

                </div>
                <div class="col-lg-3">
                    <a asp-controller="Branch" asp-action="Index">
                        <img src="~/Icons/Branch.png" runat="server" width="150" height="150" alt="" /><h4 style="font-family: Reem Kufi;  font-size:18px;align-content:center; color: #000000; ">  فروع البشركة </h4>
                    </a>

                </div>

            </div>
        </div>
   
    <br />
    <br />
    <div class="row" img-container>

            <div class="col-lg-3">
                <a asp-controller="Classification" asp-action="Index">
                    <img src="~/Icons/class.png" width="150" class="listing-img" height="150" alt="" /><h4 style="font-family: Reem Kufi; font-size: 18px; color: #000000">  تصنيف السيارات</h4>
                </a>
            </div>
       
        <div class="col-lg-3">
                <a asp-controller="Color" asp-action="Index">
                <img src="~/Icons/Color.png" width="150" class="listing-img" height="150" alt="" /><h4 style="font-family: Reem Kufi; font-size: 18px; color: #000000">  الوان السيارات </h4>
            </a>
        </div>
        <div class="col-lg-3">
            <a asp-controller="Modeel" asp-action="Index">
                <img src="~/Icons/Model.png" onended="false" runat="server" width="150" height="150" alt="" /><h4 style="font-family: Reem Kufi;  font-size:18px; color: #000000; "> السيارات </h4>
            </a>


        </div>
        <div class="col-lg-3 center">
                <a asp-controller="Manufactorer" asp-action="Index">
                <img src="~/Icons/manufacturer.png" runat="server" width="150" height="150" alt="" /><h4 style="font-family: Reem Kufi;  font-size:18px;align-content:center; color: #000000; ">  الشركات المصنعة </h4>
            </a>

        </div>

    </div>

    </div>
</div>

