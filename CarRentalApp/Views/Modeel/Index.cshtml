@model IEnumerable<CarRentalApp.ViewModels.ManufaCarViewModel>

@{
    ViewData["Title"] = "Car Models and Manufacturers";
}

<div style="padding-top:80px"></div>
<div class="container">
    <div class="col-lg-10 col-lg-offset-2">
        <div class="row">
            <div class="col-sm-2">
                <a asp-action="Create" class="btn btn-success">إضافة نوع السيارة</a>
            </div>
            <div class="col-lg-2"></div>
            <div class="col-lg-2"></div>
            <div class="col-lg-2"></div>
            <div class="col-xs-6 col-md-4">
                <div class="input-group">
                    <input type="text" class="form-control" placeholder="بحث" id="myInput" onkeyup="myFunction()" />
                    <div class="input-group-btn">
                        <button class="btn btn-primary" type="submit">
                            <span class="bi bi-search"></span>
                        </button>
                    </div>
                </div>
            </div>
        </div>
        <div style="padding-top:10px"></div>

        <table class="table table-hover" id="myTable">
    <thead>
        <tr>
             <th>إسم الشركة المصنعة</th>
             <th> إسم السيارة عريي</th>
             <th> إسم السيارةأجليزي</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var car in Model)
        {
            <tr>
                <td>@car.ManufactorNameAr</td>
                <td>@car.ModeelNameAr</td>
                <td>@car.ModeelNameEn</td>
            
               
                <td>
                    <a asp-action="Edit" asp-route-id="@car.ModeelId"><i class="bi bi-pencil"></i></a> |
                    <a asp-action="Details" asp-route-id="@car.ModeelId"><i class="bi bi-eye"></i></a> |
                    <a asp-action="Delete" asp-route-id="@car.ModeelId"><i class="bi bi-archive"></i></a>
               
               </td>
               </tr>
                }

    </tbody>
</table>
</div>
</div>


@section scripts {
    <script src="~/js/search.js"></script>
}
