@{
    var carCount = Model;
    var CountAccident = Model;
}
<style>
    .button {
        background-color: rgba(0, 255, 0, 0.3); /* Transparent green */
        border: 0px solid green; /* Green border */
        color: green; /* Text color */
        padding: 10px 20px; /* Padding around the text */
        text-align: center; /* Center the text */
        text-decoration: none; /* Remove underline if it's a link */
        font-size: 52px; /* Font size */
        display: inline-block; /* Aligns the button properly */
        border-radius: 0; /* Square corners */
        cursor: pointer; /* Show pointer on hover */
        transition: background-color 0.3s ease, color 0.3s ease; /* Smooth hover transition */
    }

        .button:hover {
            background-color: rgba(0, 255, 0, 0.5); /* Darker transparent green on hover */
            color: white; /* White text on hover */
        }

